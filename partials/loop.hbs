
<div class='container'>
  {{#foreach posts}}

  <div class='articles'>
    <article>
      <header>
        <h2>
          <a href='{{url}}'>{{{title}}}</a>
        </h2>
      </header>
      <div class='meta'>
        {{#if author.image}}
        <img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />
        {{/if}}
        <span>{{author}}</span>
        <span>{{tags prefix=" on "}}</span>
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
      </div>
    </article>
  </div>

  {{/foreach}}

  <div>
    {{pagination}}
  </div>

</div>
