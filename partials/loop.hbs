
<div class='container'>
  {{#foreach posts}}

  <div class='articles'>
    <article>
      <div class='row'>

        <div class='eyecache col s12 m2 l2'>
          <a class="cover" href='{{url}}' style="background-image: url('{{image}}')"></a>
        </div>

        <div class='col s12 m10 l10'>
          <header>
            <h2>
              <a href='{{url}}'>{{{title}}}</a>
            </h2>
          </header>
          <div class='meta'>
            {{#if author.image}}
            <img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />
            {{/if}}
            <span>{{author}}</span>
            <span>{{tags prefix=" on "}}</span>
            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
          </div>
        </div>
        
      </div>
    </article>
  </div>

  {{/foreach}}

  <div>
    {{pagination}}
  </div>

</div>
